<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.joseph.queueunderflow.headquarters.QuestionsList"
    android:background="#d3d3d3">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#32BEA6">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/owlicon"
            app:srcCompat="@drawable/owlicon" />

        <TextView
            android:id="@+id/askBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Ask"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/logOutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/askBtn"
            android:layout_marginLeft="10dp"
            android:text="Logout"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/questlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"
        android:elevation="3dp"
        android:layout_above="@+id/linearLayout" />



</RelativeLayout>
